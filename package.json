{
  "private": true,
  "name": "psim",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s start:prod || npm run -s start:dev",
    "start:dev": "webpack-dev-server --mode=development --host=0.0.0.0 --open --devtool=source-map",
    "start:prod": "webpack-dev-server --mode=production --host=0.0.0.0",
    "build": "webpack --mode=production",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "react/jsx-indent-props": [
        "error",
        4
      ],
      "no-plusplus": [
        "off"
      ],
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "never"
        }
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist/*"
  ],
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.2",
    "css-loader": "^1.0.0",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "html-webpack-plugin": "^3.2.0",
    "if-env": "^1.0.0",
    "lodash-es": "^4.17.11",
    "style-loader": "^0.23.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.2.1"
  }
}
