{
  "private": true,
  "name": "psim",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s start:prod || npm run -s start:dev",
    "start:dev": "webpack-dev-server --mode=development --host=0.0.0.0 --open --devtool=source-map",
    "start:prod": "webpack-dev-server --mode=production --host=0.0.0.0",
    "build": "webpack --mode=production --devtool=source-map",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    }
  },
  "eslintIgnore": [
    "dist/*",
    "webpack.config.js"
  ],
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^2.0.0",
    "css-loader": "^1.0.0",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "html-webpack-plugin": "^3.2.0",
    "if-env": "^1.0.0",
    "stats-webpack-plugin": "^0.7.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.2.1"
  }
}
